{{#>layout currentPage='Blog'}}

  <!-- BLOG LIST -->
 
    <main class=" flex-column mx-auto mt-5">
    <h1 style="text-align: center;" class="fw-bold mb-4 mx-auto">My Blogs</h1>

    <div style="width:93%; text-align: right; " class="text-sm-end">
      <a href="/blog-creat" class="btn btn-outline-primary me-3 px-4">Creat Blog</a>
    </div>
  <section id="blogList" class="blog-list">
    
    {{#each blogs}}
    <article class="blog-item">
      <div class="blog-item-img">
        <img src=" {{this.image}}" alt="">
      </div>
      <div class="blog-item-text">
        <div class="blog-item-buttons">
          <form>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <form>
                <a href="/blog-edit/{{this.id}}" class="btn btn-primary">Edit Blog</a>
{{!-- 
              <button class="btn btn-primary me-md-2" type="submit">EditBlog</button>
              </form> --}}
              <form action="/blog/{{this.id}}?_method=DELETE" method="post"> 
                <button onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger" type="submit">Delete Blog</button>
              </form>
              </div>         
        </div>

        <a href="/blog/{{this.id}}" style="text-decoration: none;">
          <h1 class="blog-item-title"> {{this.title}} </h1>
        </a>

        <p>{{formatDateToWIB this.createdAt}} | {{this.authorId}}</p>


        <p> {{this.content}} </p>
        <p class="blog-item-relative-time">{{getRelativeTime this.createdAt}}</p>       
      </div>
    </article>
    {{/each}}

  </section>
</div>
</main>
  
{{/layout}}