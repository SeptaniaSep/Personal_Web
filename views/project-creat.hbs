{{#> layout currentPage='Project Creat'}}

    <div class="d-flex flex-column mx-auto mt-5" style="width: 400px">
      <h1 class="fw-bold mb-4 mx-auto">Add My Project</h1>
      <form method="post" action="/project-list" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="" class="form-label fw-semibold">Project Name</label>
          <input type="text" class="form-control" id="" name="title" />
        </div>

        <div class="d-flex">
          <div class="mb-3">
            <label for="" class="form-label fw-semibold">Start Date</label>
            <input type="date" class="form-control" id="" name="start" />
          </div>
          <div class="mb-3 ms-auto">
            <label for="" class="form-label fw-semibold">End Date</label>
            <input type="date" class="form-control" id="" name="end" />
          </div>
        </div>
        <div class="mb-3">
          <label
            for="exampleFormControlTextarea1"
            class="form-label fw-semibold"
          >Description</label>
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            style="resize: none; height: 120px"
            name="description"
          ></textarea>
        </div>

        <label for="" class="form-label fw-semibold">Technologies</label>

        <div class="d-flex flex-wrap gap-5 ms-0 mb-3">
          <div class="d-flex flex-column gap-3 me-4 fw-medium">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="node"
                id="checkbox1"
                name="technology[]"
              />
              <label class="form-check-label" for="flexCheckDefault"> Node JS
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="laravel"
                id="checkbox2"
                name="technology[]"
              />
              <label class="form-check-label" for=""> React Js </label>
            </div>
          </div>

          <div class="d-flex flex-column gap-3 fw-medium">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="react"
                id="checkbox3"
                name="technology[]"
              />
              <label class="form-check-label" for="flexCheckDefault"> Next JS </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value="angular"
                id="checkbox4"
                name="technology[]"
              />
              <label class="form-check-label" for=""> TypeScript </label>
            </div>
          </div>
        </div>
        <div class="mb-3 mt-0 w-100">
          <label for="formFile" class="form-label fw-semibold">Upload Image</label>
          <input class="form-control" type="file" id="formFile" name="image" />
        </div>

        <div class="text-sm-end">
          <button class="btn btn-outline-primary me-3 px-4" type="submit">
            Submit
          </button>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"
      integrity="sha512-u3fPA7V8qQmhBPNT5quvaXVa1mnnLSXUep5PS1qo5NRzHwG19aHmNJnj1Q8hpA/nBWZtZD4r4AX6YOt5ynLN2g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
{{/layout}}