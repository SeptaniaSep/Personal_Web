{{#>layout currentPage='Blog'}}
  
    <!-- BLOG DETAIL SECTION -->

    <section class="blog-detail">
      <h1>{{blog.title}}</h1>
      
      <p>{{formatDateToWIB blog.createdAt}} | {{blog.authorId}}</p>


      <div class="blog-item-img">
        <img src={{blog.image}} alt="blog-image">
      </div>

        <p class="mt-3"> 
          {{blog.content}} </p>
      </div>

    </section>
      <script src="/js/blog.js"></script>
{{/layout}}