{{#> layout currentPage='Testimonials'}}
     <!-- MAIN CONTENT TESTIMONIAL -->
      <main>
        <h1 style="text-align: center;">My Testimonials</h1>
        <h3 style="text-align: center;">Rating By Stars</h3>

      <!-- STAR BUTTON -->
      <div class="testimonial-star-buttons"> 
        <button onclick="showAllTestimonials()">All</button>
        <button onclick="filterTestimonialStar(1)">1✭</button>
        <button onclick="filterTestimonialStar(2)">2✭</button>
        <button onclick="filterTestimonialStar(3)">3✭</button>
        <button onclick="filterTestimonialStar(4)">4✭</button>
        <button onclick="filterTestimonialStar(5)">5✭</button>
      </div>

      <!-- TESTIMONIAL LIST -->
      <div id="testimonialsContainer" class="testimonial-list">
        <article>
          <img src="/images/g1.jpg" alt="testimonial-image">
          <p class="testimonial-item-caption">
            <i>"Keren beeet woooooi...!"</i>
          </p>
          <p style="text-align: right; font-weight: bold;">Septania Nopa H</p>
          <p style="text-align: right; font-weight: bold;">5✭</p>
        </article>
      </div>
{{/layout}}